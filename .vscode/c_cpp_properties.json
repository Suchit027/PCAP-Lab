                "path": [
                    "${workspaceFolder}",
                    "/usr/lib/x86_64-linux-gnu/openmpi/include",
                    "/usr/lib/x86_64-linux-gnu/openmpi/include/openmpi"
                ]
            },
            "linkerOptions": [
                "-L/usr/lib/x86_64-linux-gnu/openmpi/lib",  // Path to OpenMPI libraries
                "-lmpi"  // Link against OpenMPI
            ]
        }
